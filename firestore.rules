rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Products collection - readable by everyone, writable by admins
    match /products/{productId} {
      allow read: if true; // Anyone can read products
      allow create: if isAdmin(); // Only admins can create
      allow update: if isAdmin(); // Only admins can update
      allow delete: if isAdmin(); // Only admins can delete
    }

    // Categories collection - readable by everyone, writable by admins
    match /categories/{categoryId} {
      allow read: if true; // Anyone can read categories
      allow create: if isAdmin(); // Only admins can create
      allow update: if isAdmin(); // Only admins can update
      allow delete: if isAdmin(); // Only admins can delete
    }

    // Users collection - users can read their own data, create their own document
    // Admins can read/update/delete all users
    match /users/{userId} {
      allow read: if isAuthenticated(); // Admins can read all, users can read their own
      allow create: if isOwner(userId); // Users can create their own document
      allow update: if isAdmin() || isOwner(userId); // Admins can update all, users can update their own
      allow delete: if isAdmin(); // Only admins can delete users
    }

    // Carts collection - users can only access their own cart
    match /carts/{userId} {
      allow read: if isOwner(userId); // Users can only read their own cart
      allow create: if isOwner(userId); // Users can create their own cart
      allow update: if isOwner(userId); // Users can update their own cart
      allow delete: if isOwner(userId); // Users can delete their own cart
    }

    // Wishlists collection - users can only access their own wishlist
    match /wishlists/{userId} {
      allow read: if isOwner(userId); // Users can only read their own wishlist
      allow create: if isOwner(userId); // Users can create their own wishlist
      allow update: if isOwner(userId); // Users can update their own wishlist
      allow delete: if isOwner(userId); // Users can delete their own wishlist
    }

    // Orders collection - users can create their own orders, read their own orders
    // Admins can read and update all orders
    match /orders/{orderId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated(); // Admins can read all, users can read their own
      allow update: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid); // Admins can update all orders, users can update their own
      allow delete: if false; // Orders should not be deleted
    }

    // Settings collection - readable by everyone, writable by admins
    match /settings/{settingId} {
      allow read: if true; // Anyone can read settings
      allow write: if isAdmin(); // Only admins can write settings
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

